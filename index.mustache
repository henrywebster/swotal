<html>
    <head>
        <meta charset="utf-8" />
        <title>My website</title>
        <style>
            @font-face {
                font-family: "NotoSans-Regular";
                src: url("NotoSans-Regular.ttf");
            }
            @font-face {
                font-family: "Roboto-Regular";
                src: url("Roboto-Regular.ttf");
            }

	        main {
		        margin: auto;
		        padding: 1.5rem;
		        max-width: 50%;
		        font-family: "Roboto-Regular", sans-serif;
	        }

            h2 {
                margin: 0;
            }

            a { 
                color: blue;
            }

            section {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 8px 4px;
                margin: 4px 0;
            }

            .detail {
                display: flex;
                min-width: 30%;
                justify-content: right;
            }
            
            .button {
                background-color: silver;
                border-radius: 10px;
                padding: 0 10px;
            }

            .item {
            }

        </style>
    </head>
    <body>
        <main>
            <h1>{{meta.title}}</h1>
            <p>
                {{meta.description}}
            </p>
            <hr>
            {{#posts}}
            <section>
                <a href={{link}}>
                    <h2>{{title}}</h2>
                </a>
                <div class="detail">
                    <div class="button">{{category}}</div>
                    <i>{{date}}</i>
                </div>
            </section>
            {{/posts}}
        </main>
    </body>
</html>