<html>
    <head>
        <meta charset="utf-8" />
        <title>My website</title>
        <style>
            @font-face {
                font-family: "NotoSans-Regular";
                src: url("NotoSans-Regular.ttf");
            }
            @font-face {
                font-family: "Roboto-Regular";
                src: url("Roboto-Regular.ttf");
            }

	        main {
		        margin: auto;
		        padding: 1.5rem;
                max-width: 70%;
		        font-family: "Roboto-Regular", sans-serif;
	        }

            h1 {
                font-size: 2em;
            }

            h2 {
                margin: 0;
                font-size: 1.5em;
            }

            .button {
                display: inline;
                background-color: silver;
                border-radius: 10px;
                padding: 0 10px;
                margin: 5px 5px;
            }

            @media(max-width: 1200px) {
                main {
                    max-width: 90%;
                }
                h1 {
                    font-size: 6em;
                }
                h2 {
                    font-size: 4em;
                }
                p {
                    font-size: 3em;
                }
                .button {
                    font-size: 3em;
                    border-radius: 10px;
                }
            }

            a { 
                color: blue;
            }

            section {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 8px 4px;
                margin: 4px 0;
            }

            .tags {
                display: flex;
                min-width: 30%;
                justify-content: right;

                list-style-type: none;
                flex-wrap: wrap;
            }

        </style>
    </head>
    <body>
        <main>
            <h1>{{meta.title}}</h1>
            <p>
                {{meta.description}}
            </p>
            <hr>
            {{#posts}}
            <section>
                <a href="{{{link}}}">
                    <h2>{{title}}</h2>
                </a>
                <ul class="tags">
                        {{#tags}}
                        <li class="button">{{.}}</li>
                        {{/tags}}
                </ul>
            </section>
            {{/posts}}
        </main>
    </body>
</html>
